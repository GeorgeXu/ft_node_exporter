#
# systemd serivce setting
#
[Unit]
Description=cloudcare ft_node_exporter 
After=network.target

[Service]
Environment=HOME=/root
WorkingDirectory=/usr/local/cloudcare/ft_node_exporter
ExecReload=/bin/kill -2 $MAINPID
KillMode=process
Restart=always
RestartSec=3s
ExecStart=/usr/local/cloudcare/ft_node_exporter/ft_node_exporter

[Install]
WantedBy=default.target
